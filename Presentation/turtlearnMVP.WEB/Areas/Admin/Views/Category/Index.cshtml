<section style="max-width:100vw !important;" class="space-ptb">
    @* <div  style="max-width:1000vw !important;" class="container"> *@
    <div class="row">
        <div class="col-md-12 col-xl-12 mt-4 mt-md-0 order-2 order-lg-1">
            <div class="blog-sidebar">
                <div class="widgets">
                    <div class="widget">
                        <div class="row">
                            <div class="col-md-4">
                                <h3>
                                    Category
                                </h3>
                            </div>
                            <div class="col-md-4">
                            </div>
                            <div class="col-md-4 widget-title-right">
                                <button id="addButton" class="btn btn-primary">
                                    <i class="fa fa-plus"></i>   <span style="font-weight:bold">ADD</span>
                                </button>
                            </div>
                        </div>
                        <div class="widget-content">
                            <table id="jqGrid"></table>
                            <div id="jqGridPager"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="partialEditContent"></div>
</section>
