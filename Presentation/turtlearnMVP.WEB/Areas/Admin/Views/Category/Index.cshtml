blog single -->
<script type="text/javascript">
    var grid = $("#jqGrid");

    grid.jqGrid({
        url: '/Admin/Category/GetAllToGrid',
        mtype: "GET",
        datatype: "json",
        colNames: ["Id", "UserTypeId", "ContactName", "CompanyName", "CompanyWebsite", "CompanyAddress", "DialCode", "Phone", "Email", "Actions"],
        colModel: [
            { name: 'Id', key: true, width: 15, hidden: true },
            { name: 'Name', width: 100 },
            { name: 'ContactName', width: 100 },
            { name: 'CompanyName', width: 100 },
            { name: 'CompanyWebsite', width: 100 },
            { name: 'CompanyAddress', width: 100 },
            { name: 'DialCode', width: 100 },
            { name: 'Phone', width: 100 },
            { name: 'Email', width: 100 },
            {
                name: 'actions',
                width: 100,
                align: 'center',
                sortable: false,
                formatter: function (cellvalue, options, rowObject) {
                    return '<button style="padding:10px;" class="btn btn-sm btn-primary" onclick="editRow(' + options.rowId + ')">Edit</button>&nbsp;&nbsp;&nbsp;' +
                        '<button style="padding:10px;" class="btn btn-sm btn-error" onclick="deleteRow(' + options.rowId + ')">Delete</button>';
                }
            }
        ],
        loadonce: true,
        navOptions: { reloadGridOptions: { fromServer: true } },
        multiSort: true,
        multiSelect: true,
        sortable: true,
        viewrecords: true,
        search: true,
        //width: "auto",
        height: "auto",
        rowNum: 15,
        pager: "#jqGridPager",

    });


    function setGridWidth() {
        var containerWidth = $('.container').width(); // Container'ın genişliğini alın

        // jqGrid'in genişliğini hesaplayın
        var gridWidth = containerWidth - 50;

        // jqGrid'in genişliğini ayarlayın
        grid.jqGrid('setGridWidth', gridWidth);
    }

    $(document).ready(function () {

        setGridWidth();

    });

    $(window).on('resize', function () {
        setGridWidth();
    });

    function editRow(rowId) {
        // $("#partialZoneContent").load("/User/Login");
        $.ajax({
            url: 'Admin/Category/AddOrUpdate/' + rowId,
            type: 'GET',
            // data: { id: item.Id },
            success: function (result) {
                $('#partialEditContent').html(result);
                $('#editModal').modal('show');

            },
            error: function () {
                console.error('Error loading partial view');
            }
        });
    }

    // Function to handle the "Delete" button click
    function deleteRow(rowId) {
        // $("#partialZoneContent").load("/User/Login");
        $.ajax({
            url: '/User/Delete/' + rowId,
            type: 'GET',
            // data: { id: item.Id },
            success: function (result) {
                $('#partialZoneContent').html(result);
                $('#loginModal').modal('show');

            },
            error: function () {
                console.error('Error loading partial view');
            }
        });
    }
    function setGridWidth() {
        var containerWidth = $('#gridContainer').width(); // Container'ın genişliğini alın

        // jqGrid'in genişliğini hesaplayın
        var gridWidth = containerWidth;

        // jqGrid'in genişliğini ayarlayın
        grid.jqGrid('setGridWidth', gridWidth);
    }

    $(document).ready(function () {

        setGridWidth();

    });

    $(window).on('resize', function () {
        setGridWidth();
    });

    $(document).on('click', '#addButton', function () {
        editRow(0);
    });
</script>
